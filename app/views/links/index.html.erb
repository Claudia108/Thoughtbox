<h1>My Links</h1>

<%= link_to "Sign Out", logout_path, method: :delete %>

<h2>Enter a new Link</h2>

<div class="row" id="save-link">
  <div class="inpt-form">
    <%= form_for @link do |f| %>

      <fieldset class="form-group col-md-4">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </fieldset>

      <fieldset class="form-group col-md-4">
        <%= f.label :url %>
        <%= f.text_field :url, class: "form-control", placeholder: "Your cool link ..." %>
      </fieldset>

      <fieldset class="form-group col-md-6">
        <%= f.submit "Save Link", class: "btn btn-primary" %>
      </fieldset>
    <% end %>
  </div>
</div>

<h2>Here Are Your Links</h2>

<div class="links">
 <div class="list-group">
  <% @links.each do |link| %>
   <li class="list-group-item">
     <h3 class="list-group-item-heading">
     <div class="title"><%= link.title %>
     </div></h3>
     <h4 class="list-group-item-text">
     <div class="url"><%= link.url %>
     </div></h4><br>
     <p class="list-group-item-text">
     This link is <b><%= link.read_status %></b></p><br>
     <p><%= link_to "Edit Link", edit_link_path(link), class: "btn btn-primary" %></p>
  <% end %>
 </div>
</div>
