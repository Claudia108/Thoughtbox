<h1>My Links</h1>

<%= link_to "Sign Out", logout_path, method: :delete %>

<h2>Enter a new Link</h2>

<form class="form-inline" id="save-link">
  <div class="form-group">
    <label for="LinkTitle">Title</label>
    <input type="text" class="form-control" id="LinkTitle" placeholder="Your link's title">
  </div><br>
  <div class="form-group">
    <label for="LinkUrl">Url</label>
    <input type="text" class="form-control" id="LinkUrl" placeholder="Your cool link ...">
  </div><br>
  <button type="submit" class="btn btn-primary">Save</button>
</form>

<h2>Here Are Your Links</h2>

<div class="links">
 <div class="list-group">
  <% @links.each do |link| %>
   <li class="list-group-item">
     <h3 class="list-group-item-heading">
     <div class="title"><%= link.title %>
     </div></h3>
     <h4 class="list-group-item-text">
     <div class="url"><%= link.url %>
     </div></h4><br>
     <p class="list-group-item-text">
     This link is <b><%= link.read %></b>
  <% end %>
 </div>
</div>
